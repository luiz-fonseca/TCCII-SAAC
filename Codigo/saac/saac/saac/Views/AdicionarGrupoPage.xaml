<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="saac.Views.AdicionarGrupoPage"
             Title="Concursos">

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="10, 0, 10, 0"
                         VerticalOptions="Center">

            <Label Text="{Binding Mensagem}" TextColor="Green"/>

            <Entry Placeholder="Nome do Grupo"
                       Text="{Binding Grupos.Nome}"/>

            <StackLayout Spacing="10">
                <Label Text="Descrição" TextColor="Green"/>
                <Editor Text="{Binding Grupos.Descricao}" HeightRequest="100"/>

            </StackLayout>

            <Button Text="Salvar" TextColor="White"
                        BackgroundColor="#77D065"
                        Command="{Binding SalvarGrupoCommand}"/>

        </StackLayout>

    </ContentPage.Content>



</ContentPage>
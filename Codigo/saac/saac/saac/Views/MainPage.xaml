<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="saac.Views.MainPage"
             Title="SaaC">

    <StackLayout Padding="20,50,20,20">

        <Label HorizontalOptions="Center" 
               TextColor="{StaticResource CorPrincipal}"
               FontAttributes="{StaticResource FonteNegrito}"
               FontSize="25"
               Text="SaaC" />
        
        <Label HorizontalOptions="Center"
               FontSize="{StaticResource FonteSubTitulo}"
               TextColor="{StaticResource CorPrincipal}" 
               Text="Sistema Auxiliar de Apoio ao Concurseiro" />
        
        <Button VerticalOptions="CenterAndExpand" 
                Text="Facebook" BackgroundColor="Blue" 
                TextColor="White" 
                Command="{Binding FacebookCommand}">
            
        </Button>

    </StackLayout>

</ContentPage>
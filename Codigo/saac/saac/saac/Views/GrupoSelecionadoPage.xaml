<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="saac.Views.GrupoSelecionadoPage"
             Title="Grupo">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Font="Medium" TextColor="Green" Text="{Binding Grupos.Nome}"/>
            <Label Text="{Binding Grupos.Descricao}"/>
            <Label TextColor="Green" Text="{Binding Grupos.Categoria}"/>

            <Button Text="Seguir" Command="{Binding SeguirGrupoCommand}"/>


            <Entry Placeholder="Publicação"
                       Text="{Binding Publication.Texto}"/>

            <Button Text="Salvar" TextColor="White"
                        BackgroundColor="#77D065"
                        Command="{Binding SalvarPublicacaoCommand}"/>

            <Label Text="Publicações" TextColor="Green"/>

            <Label Text="{Binding Message}"/>

            <ListView ItemsSource="{Binding PublicacoesGrupo}" HasUnevenRows="True"
                      IsPullToRefreshEnabled="True" RefreshCommand="{Binding AtualizarCommand}"
                      IsRefreshing="{Binding Atualizando}">
                
                <ListView.Behaviors>
                    <behaviors:EventToCommandBehavior   EventName="ItemTapped" 
                                                    Command="{Binding PublicacaoSelectedCommand}"
                                                    EventArgsParameterPath="Item" />
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label TextColor="Green" Text="{Binding Nome}"/>
                                <Label Font="Small" Text="{Binding Texto}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>
        
    </ContentPage.Content>
  
</ContentPage>